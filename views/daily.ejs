<%- layout('layouts/boilerplate') %>
<h1 class="mb-2">Daily Quests</h1>
<hr>
<ul class="nav nav-pills nav-fill mb-2" id="pills-tab" role="tablist">
  <li class="nav-item darkerBlue" role="presentation">
    <a class="nav-link active" id="today" data-bs-toggle="pill" href="#pills-home" role="tab" aria-controls="pills-home" aria-selected="true">Today</a>
  </li>
  <li class="nav-item darkerBlue" role="presentation">
    <a class="nav-link" id="tomorrow" data-bs-toggle="pill" href="#pills-profile" role="tab" aria-controls="pills-profile" aria-selected="false">Tomorrow</a>
  </li>
</ul>
<div class="tab-content" id="pills-tabContent">
  <div class="tab-pane fade show active" id="pills-home" role="tabpanel" aria-labelledby="today">
    <div class="py-2 mb-3">
      <h3 class=""><strong>PvE</strong></h3>
      <div class="list-group-flush rounded mb-3">
        <% for (let id of todayCats.pve) { %> 
          <li class="list-group-item">
            <strong><%= todayDict[id].name %></strong> 
            (<%= todayDict[id].tiers[0].count %>)
            <br>
            <%= todayDict[id].requirement %>
          </li>
        <% } %>
      </div>
      <h3 class=""><strong>PvP</strong></h3>
      <div class="list-group-flush rounded mb-3">
        <% for (let id of todayCats.pvp) { %> 
          <li class="list-group-item">
            <strong><%= todayDict[id].name %></strong> 
            (<%= todayDict[id].tiers[0].count %>)
            <br>
            <%= todayDict[id].requirement %>
          </li>
        <% } %>
      </div>
      <h3 class=""><strong>WvW</strong></h3>
      <div class="list-group-flush rounded mb-3">
        <% for (let id of todayCats.wvw) { %> 
          <li class="list-group-item">
            <strong><%= todayDict[id].name %></strong> 
            (<%= todayDict[id].tiers[0].count %>)
            <br>
            <%= todayDict[id].requirement %>
          </li>
        <% } %>
      </div>
      <h3 class=""><strong>Fractals</strong></h3>
      <div class="list-group-flush rounded mb-3">
        <% for (let id of todayCats.fractals) { %> 
          <li class="list-group-item">
            <strong><%= todayDict[id].name %></strong> 
            (<%= todayDict[id].tiers[0].count %>)
            <br>
            <%= todayDict[id].requirement %>
          </li>
        <% } %>
      </div>
      <h3 class=""><strong>Special Events</strong></h3>
      <div class="list-group-flush rounded mb-3">
        <% if (todayCats.special.length === 0) { %> 
          <li class="list-group-item">No special event dailies.</li>
        <% } %>
        <% for (let id of todayCats.special) { %> 
          <li class="list-group-item">
            <strong><%= todayDict[id].name %></strong> 
            (<%= todayDict[id].tiers[0].count %>)
            <br>
            <%= todayDict[id].requirement %>
          </li>
        <% } %>
      </div>
    </div>
  </div>
  <div class="tab-pane fade" id="pills-profile" role="tabpanel" aria-labelledby="tomorrow">
