<%- layout("layouts/boilerplate") %>
<h1>Market History</h1>
<hr>
<div class="row g-0 gx-sm-3">
  <div class="col-6 mb-3 border-end">
    <h4 class="text-center">Sold Items</h4>
    <ul class="list-group-flush p-0">
      <% for (let item of sell) { %> 
        <li class="list-group-item">
          <strong><%= sellDict[item.item_id].name %></strong>
          <br>
          <%- convertGold(item.price) %>
          <br>
          <%= new Date(item.purchased).toLocaleString(
            'en-US',
            {
              dateStyle: 'short',
              timeStyle: 'short'
            }
          ) %>
        </li>
      <% } %> 
    </ul>
  </div>
  <div class="col-6 mb-3">
    <h4 class="text-center">Bought Items</h4>
    <ul class="list-group-flush p-0">
      <% for (let item of buy) { %> 
        <li class="list-group-item">
          <strong><%= buyDict[item.item_id].name %></strong>
          <br>
          <%- convertGold(item.price) %> 
          <br>
          <%= new Date(item.purchased).toLocaleString(
            'en-US',
            {
              dateStyle: 'short',
              timeStyle: 'short'
            }
          ) %>
        </li>
      <% } %> 
    </ul>
  </div>
</div>
