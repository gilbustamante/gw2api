<% layout('./layouts/boilerplate') %>
<h1>Wallet</h1>
<hr>
<div class="d-flex row row-cols-1 row-cols-lg-4 gy-3 gx-4">
  <% for (let item of wallet) { %>
    <div class="col">
      <div class="card m-0 currencyCard text-center">
        <img src="<%= item.icon %>" class="mt-4 mx-auto" width="64" alt="Currency icon">
        <div class="card-body">
          <h6 class="card-title"><%= item.name %></h6>
          <% if (item.name === 'Coin') { %>
            <h5 class="mb-0"><strong><%- convertGold(item.value) %></strong></h5>
          <% } else { %>
            <h5 class="mb-0"><strong><%= convertNum(item.value) %></strong></h5>
          <% } %> 
        </div>
      </div>
    </div>
  <% } %>
</div>